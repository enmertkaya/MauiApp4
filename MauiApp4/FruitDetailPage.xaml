<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp4.FruitDetailPage"
             Title="Fruit Detail Page">
    <Grid RowDefinitions="Auto,Auto,*" Padding="20">
        <Image Grid.Row="0" x:Name="ImgFruit" HeightRequest="500" />
        <Label Grid.Row="1" x:Name="LblFruitName" FontSize="Title"/>
        <Label Grid.Row="2" x:Name="LblFruitSentence" FontSize="Subtitle"/>
    </Grid>
    
    
</ContentPage>